<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Main Menu -->
        <menuitem id="menu_tracking_root" 
                  name="Tracking" 
                  sequence="10" 
                  web_icon="idara-tracking-integration,static/description/icon.png"/>

        <!-- Devices Menu -->
        <menuitem id="menu_tracking_devices" 
                  name="Devices" 
                  parent="menu_tracking_root" 
                  sequence="10"/>

        <menuitem id="menu_tracking_live_map" 
                  name="Live Map" 
                  parent="menu_tracking_devices" 
                  action="action_tracking_live_map" 
                  sequence="1"/>

        <menuitem id="menu_tracking_all_devices" 
                  name="All Devices" 
                  parent="menu_tracking_devices" 
                  action="action_tracking_device" 
                  sequence="10"/>

        <!-- History Menu -->
        <menuitem id="menu_tracking_history" 
                  name="History" 
                  parent="menu_tracking_root" 
                  sequence="20"/>

        <menuitem id="menu_tracking_locations" 
                  name="Location History" 
                  parent="menu_tracking_history" 
                  action="action_tracking_location" 
                  sequence="10"/>

        <!-- Configuration Menu -->
        <menuitem id="menu_tracking_configuration" 
                  name="Configuration" 
                  parent="menu_tracking_root" 
                  sequence="100" 
                  groups="group_tracking_manager"/>

        <menuitem id="menu_tracking_config" 
                  name="API Configuration" 
                  parent="menu_tracking_configuration" 
                  action="action_tracking_config" 
                  sequence="10"/>

    </data>
</odoo>
