<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Location Form View -->
        <record id="view_tracking_location_form" model="ir.ui.view">
            <field name="name">tracking.location.form</field>
            <field name="model">tracking.location</field>
            <field name="arch" type="xml">
                <form string="Device Location">
                    <header>
                        <button name="action_view_on_map" string="View on Map" type="object" class="btn-primary" icon="fa-globe"/>
                    </header>
                    <sheet>
                        <group>
                            <group name="device_info">
                                <field name="device_id"/>
                                <field name="position_time"/>
                                <field name="server_time"/>
                            </group>
                            <group name="location_info">
                                <field name="latitude"/>
                                <field name="longitude"/>
                                <field name="altitude"/>
                                <field name="accuracy"/>
                            </group>
                        </group>
                        <group string="Movement Data">
                            <group>
                                <field name="speed"/>
                                <field name="heading"/>
                                <field name="movement_status"/>
                            </group>
                            <group>
                                <field name="ignition"/>
                                <field name="satellites"/>
                            </group>
                        </group>
                        <group string="Additional Data">
                            <group>
                                <field name="battery_level"/>
                                <field name="fuel_level"/>
                            </group>
                            <group>
                                <field name="address"/>
                            </group>
                        </group>
                        <group string="Raw Data">
                            <field name="raw_data" nolabel="1" widget="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Location Tree View -->
        <record id="view_tracking_location_tree" model="ir.ui.view">
            <field name="name">tracking.location.tree</field>
            <field name="model">tracking.location</field>
            <field name="arch" type="xml">
                <tree string="Location History">
                    <field name="device_id"/>
                    <field name="position_time"/>
                    <field name="latitude"/>
                    <field name="longitude"/>
                    <field name="speed"/>
                    <field name="altitude"/>
                    <field name="movement_status"/>
                    <field name="ignition"/>
                </tree>
            </field>
        </record>

        <!-- Location Search View -->
        <record id="view_tracking_location_search" model="ir.ui.view">
            <field name="name">tracking.location.search</field>
            <field name="model">tracking.location</field>
            <field name="arch" type="xml">
                <search string="Search Locations">
                    <field name="device_id"/>
                    <field name="position_time"/>
                    <filter string="Moving" name="moving" domain="[('movement_status', '=', 'moving')]"/>
                    <filter string="Stopped" name="stopped" domain="[('movement_status', '=', 'stopped')]"/>
                    <filter string="Today" name="today" domain="[('position_time', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Device" name="group_device" context="{'group_by': 'device_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'position_time:day'}"/>
                        <filter string="Status" name="group_status" context="{'group_by': 'movement_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Location Action -->
        <record id="action_tracking_location" model="ir.actions.act_window">
            <field name="name">Location History</field>
            <field name="res_model">tracking.location</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_today': 1}</field>
        </record>

    </data>
</odoo>
