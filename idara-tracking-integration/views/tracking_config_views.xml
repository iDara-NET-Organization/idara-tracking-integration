<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Configuration Form View -->
        <record id="view_tracking_config_form" model="ir.ui.view">
            <field name="name">tracking.config.form</field>
            <field name="model">tracking.config</field>
            <field name="arch" type="xml">
                <form string="Tracking Configuration">
                    <header>
                        <button name="action_test_connection" string="Test Connection" type="object" class="btn-primary"/>
                        <button name="action_sync_devices" string="Sync Devices" type="object" class="btn-success"/>
                        <button name="action_sync_locations" string="Sync Locations" type="object" class="btn-info"/>
                        <field name="connection_status" widget="statusbar" statusbar_visible="not_tested,success,failed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" icon="fa-hdd-o">
                                <field string="Devices" name="id" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group name="basic_info">
                                <field name="name"/>
                                <field name="active"/>
                                <field name="sync_interval"/>
                            </group>
                            <group name="connection_info">
                                <field name="last_sync" readonly="1"/>
                                <field name="connection_status" invisible="1"/>
                            </group>
                        </group>
                        <group string="API Configuration">
                            <group>
                                <field name="api_url"/>
                                <field name="api_key" password="True"/>
                            </group>
                            <group>
                                <field name="api_hash" password="True"/>
                                <field name="user_api_hash" password="True"/>
                            </group>
                        </group>
                        <group string="Connection Status" attrs="{'invisible': [('error_message', '=', False)]}">
                            <field name="error_message" nolabel="1" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Configuration Tree View -->
        <record id="view_tracking_config_tree" model="ir.ui.view">
            <field name="name">tracking.config.tree</field>
            <field name="model">tracking.config</field>
            <field name="arch" type="xml">
                <tree string="Tracking Configurations">
                    <field name="name"/>
                    <field name="api_url"/>
                    <field name="connection_status"/>
                    <field name="last_sync"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Configuration Action -->
        <record id="action_tracking_config" model="ir.actions.act_window">
            <field name="name">Configuration</field>
            <field name="res_model">tracking.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first tracking configuration
                </p>
                <p>
                    Configure the connection to your tracking API server.
                </p>
            </field>
        </record>

    </data>
</odoo>
