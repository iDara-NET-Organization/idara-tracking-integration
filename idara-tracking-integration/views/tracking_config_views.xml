<odoo>
    <record id="view_tracking_config_form" model="ir.ui.view">
        <field name="name">tracking.config.form</field>
        <field name="model">tracking.config</field>
        <field name="arch" type="xml">
            <form string="Tracking Configuration">
                <group>
                    <field name="base_url" placeholder="https://tracking.yourdomain.com/api"/>
                    <field name="api_key" password="True"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
