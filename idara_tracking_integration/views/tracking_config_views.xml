<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_tracking_config_form" model="ir.ui.view">
        <field name="name">tracking.config.form</field>
        <field name="model">tracking.config</field>
        <field name="arch" type="xml">
            <form string="Tracking Configuration">
                <header>
                    <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                    <button name="fetch_devices_from_api" string="Fetch Devices from API" type="object" class="btn-success"/>
                    <button name="create_demo_devices" string="Create Demo Devices" type="object" class="btn-warning"/>
                    <button name="delete_all_devices" string="Delete All Devices" type="object" class="btn-danger" confirm="Are you sure you want to delete all devices?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_devices" icon="fa-hdd-o">
                            <field string="Devices" name="device_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <div class="d-flex align-items-center mb-3">
                            <img src="/idara_tracking_integration/static/src/img/logo.png" 
                                 alt="Idara Tracking" 
                                 style="max-height: 60px; margin-right: 15px; object-fit: contain;"/>
                            <h1>
                                <field name="name" placeholder="Configuration Name"/>
                            </h1>
                        </div>
                    </div>
                    <group>
                        <group string="API Configuration">
                            <field name="api_url"/>
                            <field name="api_key" password="True"/>
                        </group>
                        <group string="Authentication">
                            <field name="username"/>
                            <field name="password" password="True"/>
                        </group>
                    </group>
                    <group>
                        <group string="Google Maps">
                            <field name="google_maps_api_key" password="True" placeholder="Enter your Google Maps API key"/>
                            <field name="auto_refresh_interval"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_tracking_config_tree" model="ir.ui.view">
        <field name="name">tracking.config.tree</field>
        <field name="model">tracking.config</field>
        <field name="arch" type="xml">
            <tree string="Tracking Configurations">
                <field name="name"/>
                <field name="api_url"/>
                <field name="device_count"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tracking_config" model="ir.actions.act_window">
        <field name="name">Tracking Configuration</field>
        <field name="res_model">tracking.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tracking configuration
            </p>
            <p>
                Configure your GPS tracking system integration here.
            </p>
        </field>
    </record>
</odoo>
