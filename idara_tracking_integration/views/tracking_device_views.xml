<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_tracking_device_form" model="ir.ui.view">
        <field name="name">tracking.device.form</field>
        <field name="model">tracking.device</field>
        <field name="arch" type="xml">
            <form string="Tracking Device">
                <header>
                    <button name="refresh_location" string="Refresh Location" type="object" class="btn-primary" icon="fa-refresh" title="Refresh Location"/>
                    <button name="action_view_fleet_vehicle" string="View Vehicle" type="object" class="btn-secondary" icon="fa-car" attrs="{'invisible': [('fleet_vehicle_id', '=', False)]}" title="View Fleet Vehicle"/>
                    <field name="status" widget="statusbar" statusbar_visible="online,moving,idle,offline"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_fleet_vehicle" icon="fa-car" attrs="{'invisible': [('fleet_vehicle_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="fleet_vehicle_id" readonly="1" nolabel="1"/>
                                </span>
                                <span class="o_stat_text">Fleet Vehicle</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <div class="d-flex align-items-center mb-3">
                            <img src="/idara_tracking_integration/static/src/img/logo.png" 
                                 alt="Idara Tracking" 
                                 style="max-height: 50px; margin-right: 12px; object-fit: contain;"/>
                            <h1>
                                <field name="name" placeholder="Device Name"/>
                            </h1>
                        </div>
                    </div>
                    <group>
                        <group string="Device Information">
                            <field name="device_id"/>
                            <field name="imei"/>
                            <field name="config_id"/>
                            <field name="fleet_vehicle_id" options="{'no_create': True}"/>
                            <field name="active"/>
                        </group>
                        <group string="Vehicle Information">
                            <field name="vehicle_id"/>
                            <field name="driver_name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="Location Data">
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="address"/>
                        </group>
                        <group string="Status">
                            <field name="speed"/>
                            <field name="last_update"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_tracking_device_tree" model="ir.ui.view">
        <field name="name">tracking.device.tree</field>
        <field name="model">tracking.device</field>
        <field name="arch" type="xml">
            <tree string="Tracking Devices">
                <field name="name"/>
                <field name="device_id"/>
                <field name="vehicle_id"/>
                <field name="status" decoration-success="status == 'online'" decoration-info="status == 'moving'" decoration-warning="status == 'idle'" decoration-danger="status == 'offline'"/>
                <field name="speed"/>
                <field name="last_update"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_tracking_device_kanban" model="ir.ui.view">
        <field name="name">tracking.device.kanban</field>
        <field name="model">tracking.device</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="device_id"/>
                <field name="status"/>
                <field name="speed"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <span class="text-muted"><field name="device_id"/></span>
                                </div>
                                <span class="float-end badge badge-pill" t-att-class="record.status.raw_value == 'online' ? 'badge-success' : record.status.raw_value == 'moving' ? 'badge-info' : record.status.raw_value == 'idle' ? 'badge-warning' : 'badge-secondary'">
                                    <field name="status"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span title="Speed"><i class="fa fa-tachometer" aria-label="Speed"/> <field name="speed"/> km/h</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tracking_device" model="ir.actions.act_window">
        <field name="name">Tracking Devices</field>
        <field name="res_model">tracking.device</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first tracking device
            </p>
            <p>
                Register and manage your GPS tracking devices here.
            </p>
        </field>
    </record>
</odoo>
